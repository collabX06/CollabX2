// src/main.jsx
import React from "react";
import ReactDOM from "react-dom/client";
import { BrowserRouter as Router } from "react-router-dom";
import App from "./App";
import "./index.css";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <Router>
      <App />
    </Router>
  </React.StrictMode>
);

// src/App.jsx
import { Routes, Route } from "react-router-dom";
import Home from "./pages/Home";
import BrowseProjects from "./pages/BrowseProjects";
import ProjectDetails from "./pages/ProjectDetails";
import PostResearch from "./pages/PostResearch";
import CollaborationRequests from "./pages/CollaborationRequests";
import UserProfile from "./pages/UserProfile";
import Navbar from "./components/Navbar";

function App() {
  return (
    <div className="min-h-screen bg-gray-100">
      <Navbar />
      <Routes>
        <Route path="/" element={<Home />} />
        <Route path="/projects" element={<BrowseProjects />} />
        <Route path="/projects/:id" element={<ProjectDetails />} />
        <Route path="/post-research" element={<PostResearch />} />
        <Route path="/collaborations" element={<CollaborationRequests />} />
        <Route path="/profile" element={<UserProfile />} />
      </Routes>
    </div>
  );
}

export default App;

// src/components/Navbar.jsx
import { Link } from "react-router-dom";

function Navbar() {
  return (
    <nav className="bg-blue-600 text-white p-4 flex justify-between">
      <Link to="/" className="text-lg font-bold">ResearchHub</Link>
      <div>
        <Link to="/projects" className="mx-2">Browse</Link>
        <Link to="/post-research" className="mx-2">Post Idea</Link>
        <Link to="/collaborations" className="mx-2">Collaborate</Link>
        <Link to="/profile" className="mx-2">Profile</Link>
      </div>
    </nav>
  );
}

export default Navbar;

// src/pages/Home.jsx
import { Link } from "react-router-dom";

function Home() {
  return (
    <div className="text-center p-10">
      <h1 className="text-4xl font-bold">Innovate. Collaborate. Publish.</h1>
      <p className="mt-4 text-lg">Join our research platform to share and discover new ideas.</p>
      <div className="mt-6">
        <Link to="/post-research" className="bg-blue-500 text-white px-4 py-2 rounded">Post Research Idea</Link>
        <Link to="/projects" className="ml-4 bg-gray-700 text-white px-4 py-2 rounded">Browse Projects</Link>
      </div>
    </div>
  );
}

export default Home;

// src/pages/BrowseProjects.jsx
import { useState, useEffect } from "react";
import axios from "axios";
import { Link } from "react-router-dom";
import ProjectCard from "../components/ProjectCard";

function BrowseProjects() {
  const [projects, setProjects] = useState([]);

  useEffect(() => {
    axios.get("http://localhost:5000/projects").then((response) => {
      setProjects(response.data);
    });
  }, []);

  return (
    <div className="p-6">
      <h2 className="text-2xl font-bold mb-4">Research Projects</h2>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {projects.map((project) => (
          <Link to={`/projects/${project.id}`} key={project.id}>
            <ProjectCard project={project} />
          </Link>
        ))}
      </div>
    </div>
  );
}

export default BrowseProjects;

// src/pages/ProjectDetails.jsx
import { useParams } from "react-router-dom";
import { useState, useEffect } from "react";
import axios from "axios";

function ProjectDetails() {
  const { id } = useParams();
  const [project, setProject] = useState(null);

  useEffect(() => {
    axios.get(`http://localhost:5000/projects/${id}`).then((response) => {
      setProject(response.data);
    });
  }, [id]);

  if (!project) return <p>Loading...</p>;

  return (
    <div className="p-6">
      <h2 className="text-3xl font-bold">{project.title}</h2>
      <p className="mt-2 text-gray-700">{project.description}</p>
      <div className="mt-4">
        <span className="bg-gray-300 px-3 py-1 rounded">{project.tags.join(", ")}</span>
      </div>
      <button className="mt-6 bg-blue-500 text-white px-4 py-2 rounded">Request Collaboration</button>
    </div>
  );
}

export default ProjectDetails;
